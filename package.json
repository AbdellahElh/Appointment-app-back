{
  "name": "appointment-api",
  "version": "1.0.0",
  "description": "Demo application for the course Web Services",
  "main": "src/index.js",
  "author": "Abdellah El Halimi",
  "license": "MIT",
  "scripts": {
    "s": "env-cmd nodemon",
    "start": "env-cmd nodemon",
    "test": "env-cmd -f .env.test jest --runInBand",
    "test:coverage": "env-cmd -f .env.test jest --runInBand --coverage"
  },
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.1",
    "config": "^3.3.9",
    "joi": "^17.11.0",
    "knex": "^3.0.1",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "koa-helmet": "^7.0.2",
    "mysql2": "^3.6.2",
    "node-emoji": "1.11.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "env-cmd": "^10.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "nodemonConfig": {
    "signal": "SIGTERM",
    "ignore": [
      "node_modules/*",
      ".vscode/*"
    ],
    "delay": "80",
    "watch": [
      "config",
      "src"
    ],
    "ext": "js,json",
    "legacyWatch": true,
    "exec": "node --inspect=0.0.0.0:9001 --trace-warnings src/index.js"
  }
}
